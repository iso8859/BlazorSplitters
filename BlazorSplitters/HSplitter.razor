@inherits SplitterCommon

<div id="@m_guid" class="splitterH">
    @if (SizeFirstPanel != "0%")
    {
        <div class="panel" style="flex-basis: @SizeFirstPanel">
            <CascadingValue Value=@this>
                @FirstPanel
            </CascadingValue>
        </div>
    }

    <div id="@(m_guid)_slider" class="hslider"
         @onpointerdown="onpointerdown"
         @onpointermove="onpointermove"
         @onpointerup="onpointerup">
        <div class="arrow" @onpointerdown="(e)=>Direct(0)"><IconUp /></div>
        <div class="handle" />
        <div class="arrow" @onpointerdown="(e)=>Direct(100)"><IconDown /></div>
    </div>



    @if (SizeFirstPanel!="100%")
    {
        <div class="panel">
            <CascadingValue Value=@this>
                @SecondPanel
            </CascadingValue>
        </div>
    }
</div>
